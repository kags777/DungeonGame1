<Page x:Class="DungeonGame1.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главное меню" Background="#1a1a2e">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ПОДЗЕМЕЛЬЕ" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="#e94560"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>

            <Button x:Name="NewGameBtn" Content="НОВАЯ ИГРА" 
                    Width="200" Height="40" Margin="0,5"
                    Background="#16213e" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    BorderBrush="#0f3460" BorderThickness="2"
                    Click="NewGameBtn_Click"/>

            <Button x:Name="ContinueBtn" Content="ПРОДОЛЖИТЬ" 
                    Width="200" Height="40" Margin="0,5"
                    Background="#16213e" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    BorderBrush="#0f3460" BorderThickness="2"
                    Click="ContinueBtn_Click"/>

            <Button x:Name="EditorBtn" Content="РЕДАКТОР УРОВНЕЙ" 
                    Width="200" Height="40" Margin="0,5"
                    Background="#16213e" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    BorderBrush="#0f3460" BorderThickness="2"
                    Click="EditorBtn_Click"/>

            <Button x:Name="ExitBtn" Content="ВЫХОД" 
                    Width="200" Height="40" Margin="0,5"
                    Background="#16213e" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    BorderBrush="#0f3460" BorderThickness="2"
                    Click="ExitBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>