<Window x:Class="DungeonGame1.SaveSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор сохранения" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите сохранение:" 
                   Margin="10" Foreground="White"
                   FontSize="16" FontWeight="Bold"/>

        <ListBox x:Name="SavesListBox" Grid.Row="1" 
                 Margin="10" Background="#16213e"
                 BorderBrush="#0f3460" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding LevelName}" 
                                   Foreground="White" 
                                   FontSize="14"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding SaveTime}" 
                                   Foreground="LightGray" 
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Score, StringFormat='Счёт: {0}'}" 
                                   Foreground="LightGreen" 
                                   FontSize="12"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Удалить" Width="80" Height="30" 
                    Margin="5" Click="DeleteBtn_Click"
                    Background="#e94560" Foreground="White"
                    BorderBrush="#0f3460"/>
            <Button Content="Отмена" Width="80" Height="30" 
                    Margin="5" Click="CancelBtn_Click"
                    Background="#e94560" Foreground="White"
                    BorderBrush="#0f3460"/>
            <Button Content="Загрузить" Width="80" Height="30" 
                    Margin="5" Click="LoadBtn_Click"
                    Background="#0f3460" Foreground="White"
                    BorderBrush="#0f3460"/>
        </StackPanel>
    </Grid>
</Window>