<Window x:Class="DungeonGame1.LevelSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор уровня" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите уровень:" 
                   Margin="10" Foreground="White"
                   FontSize="16" FontWeight="Bold"/>

        <ListBox x:Name="LevelsListBox" Grid.Row="1" 
                 Margin="10" Background="#16213e"
                 BorderBrush="#0f3460" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" 
                               Foreground="White" 
                               FontSize="14"
                               Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Отмена" Width="80" Height="30" 
                    Margin="5" Click="CancelBtn_Click"
                    Background="#e94560" Foreground="White"
                    BorderBrush="#0f3460"/>
            <Button Content="Выбрать" Width="80" Height="30" 
                    Margin="5" Click="SelectBtn_Click"
                    Background="#0f3460" Foreground="White"
                    BorderBrush="#0f3460"/>
        </StackPanel>
    </Grid>
</Window>