<Window x:Class="DungeonGame1.LevelSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор уровня" Height="450" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите уровень:" 
                   Margin="10" Foreground="White"
                   FontSize="16" FontWeight="Bold"/>

        <ListBox x:Name="LevelsListBox" Grid.Row="1" 
                 Margin="10" Background="#16213e"
                 BorderBrush="#0f3460" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Name}" 
                                   Foreground="White" 
                                   FontSize="14"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Width, StringFormat='Ширина: {0}'}" 
                                   Foreground="LightGray" 
                                   FontSize="11"/>
                        <TextBlock Text="{Binding Height, StringFormat='Высота: {0}'}" 
                                   Foreground="LightGray" 
                                   FontSize="11"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Информационная панель -->
        <Border Grid.Row="2" Background="#0f1c30" Margin="10,5,10,5" 
                Padding="10" CornerRadius="5">
            <TextBlock Text="Выберите уровень и нажмите УДАЛИТЬ, чтобы удалить его"
                       Foreground="LightGray" FontSize="12"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Удалить" Width="80" Height="30" 
                    Margin="5" Click="DeleteBtn_Click"
                    Background="#d63031" Foreground="White"
                    BorderBrush="#0f3460"/>
            <Button Content="Отмена" Width="80" Height="30" 
                    Margin="5" Click="CancelBtn_Click"
                    Background="#e94560" Foreground="White"
                    BorderBrush="#0f3460"/>
            <Button Content="Выбрать" Width="80" Height="30" 
                    Margin="5" Click="SelectBtn_Click"
                    Background="#0f3460" Foreground="White"
                    BorderBrush="#0f3460"/>
        </StackPanel>
    </Grid>
</Window>