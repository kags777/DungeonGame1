<Page x:Class="DungeonGame1.EditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактор уровней" Background="#1a1a2e">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Column="0" Background="#16213e" Width="150">
            <StackPanel Margin="10">
                <TextBlock Text="Редактор уровней" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Выберите объект:" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>

                <ListBox x:Name="EntitiesListBox" 
                         Height="200"
                         Background="#0f3460"
                         BorderBrush="#e94560"
                         SelectionChanged="EntitiesListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                       Foreground="White" 
                                       Margin="5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBox x:Name="LevelNameBox" 
                         Text="Новый уровень"
                         Margin="0,20,0,10"
                         Background="#0f3460"
                         Foreground="White"
                         BorderBrush="#e94560"/>

                <StackPanel>
                    <Button Content="Новый уровень" 
                            Margin="0,5" Height="30"
                            Click="NewLevelBtn_Click"
                            Background="#0984e3" Foreground="White"/>
                    <Button Content="Сохранить" 
                            Margin="0,5" Height="30"
                            Click="SaveBtn_Click"
                            Background="#00b894" Foreground="White"/>
                    <Button Content="В меню" 
                            Margin="0,5" Height="30"
                            Click="MenuBtn_Click"
                            Background="#e17055" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Редактор карты -->
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="EditorGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid x:Name="MapGrid" Background="#0f3460"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="40" Height="40" 
                                BorderBrush="#16213e" 
                                BorderThickness="1"
                                MouseDown="Tile_MouseDown">
                            <TextBlock Text="{Binding Symbol}" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Color}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>