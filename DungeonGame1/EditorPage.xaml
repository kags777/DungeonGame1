 <Page x:Class="DungeonGame1.EditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактор уровней" Background="#1a1a2e"
      MouseDown="Page_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Column="0" Background="#16213e" Width="200">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="🧩 РЕДАКТОР УРОВНЕЙ" 
                               Foreground="#e94560" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"/>

                    <!-- Управление уровнями -->
                    <Border Background="#0f1c30" Margin="0,0,0,15" Padding="8" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="УРОВЕНЬ" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>

                            <TextBox x:Name="LevelNameBox" 
                                     Text="Новый уровень"
                                     Margin="0,0,0,5"
                                     Background="#0f3460"
                                     Foreground="White"
                                     BorderBrush="#e94560"
                                     ToolTip="Название уровня"/>

                            <!-- УДАЛЕНО: поля для изменения размеров -->
                            <TextBlock Text="Размер: 10x10 клеток" 
                                       Foreground="LightGray" 
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопки управления уровнями -->
                    <StackPanel Margin="0,0,0,15">
                        <Button Content="📂 Загрузить уровень" 
                                Margin="0,2" Height="35"
                                Click="LoadLevelBtn_Click"
                                Background="#0984e3" Foreground="White"
                                FontWeight="Bold"
                                ToolTip="Загрузить существующий уровень"/>
                        <Button Content=" Новый уровень" 
                                Margin="0,2" Height="35"
                                Click="NewLevelBtn_Click"
                                Background="#0984e3" Foreground="White"
                                FontWeight="Bold"
                                ToolTip="Создать новый пустой уровень"/>
                        <Button Content=" Сохранить уровень" 
                                Margin="0,2" Height="35"
                                Click="SaveBtn_Click"
                                Background="#00b894" Foreground="White"
                                FontWeight="Bold"
                                ToolTip="Сохранить текущий уровень"/>
                        <Button Content=" Удалить уровень" 
                                Margin="0,2" Height="35"
                                Click="DeleteLevelBtn_Click"
                                Background="#d63031" Foreground="White"
                                FontWeight="Bold"
                                ToolTip="Удалить загруженный уровень"/>
                    </StackPanel>

                    <!-- Выбор объектов -->
                    <Border Background="#0f1c30" Margin="0,0,0,15" Padding="8" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="ОБЪЕКТЫ" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>

                            <ListBox x:Name="EntitiesListBox" 
                                     Height="220"
                                     Background="#0f3460"
                                     BorderBrush="#e94560"
                                     SelectionChanged="EntitiesListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="3">
                                            <TextBlock Text="{Binding Symbol}" 
                                                       FontSize="20" 
                                                       Margin="0,0,10,0"
                                                       Width="30"/>
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Управление -->
                    <Button Content=" В меню" 
                            Margin="0,2" Height="35"
                            Click="MenuBtn_Click"
                            Background="#e17055" Foreground="White"
                            FontWeight="Bold"
                            ToolTip="Вернуться в главное меню"/>

                    <!-- Подсказки -->
                    <Border Background="#0f1c30" Margin="0,15,0,0" Padding="10" CornerRadius="5">
                        <TextBlock Text="Управление редактором:
• ЛКМ - поставить объект
• ПКМ - очистить клетку
• Средняя кнопка - взять объект
• Размер карты фиксированный: 10x10
• Сохраните перед выходом" 
                                   Foreground="LightGray" 
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Редактор карты -->
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto" Padding="10">
            <ItemsControl x:Name="EditorGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid x:Name="MapGrid" Rows="10" 
                                     Columns="10" 
                                     Background="#0f1c30"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="50" Height="50" 
                                BorderBrush="#2a3b5c" BorderThickness="1"
                                Background="{Binding BackgroundColor}"
                                MouseDown="Tile_MouseDown"
                                ToolTip="{Binding ToolTipText}">
                            <TextBlock Text="{Binding Symbol}" 
                                       FontSize="28" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Color}"
                                       FontWeight="Bold"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>