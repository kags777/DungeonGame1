<Page x:Class="DungeonGame1.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Игра" Background="#1a1a2e" KeyDown="Page_KeyDown"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Статус бар -->
        <Border Grid.Row="0" Background="#16213e" Padding="10" 
                BorderBrush="#0f3460" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text=" Здоровье: " Foreground="White" FontSize="16"/>
                <TextBlock x:Name="HealthText" Text="100/100" Foreground="#e94560" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>

                <TextBlock Text=" Счёт: " Foreground="White" FontSize="16" Margin="20,0,0,0"/>
                <TextBlock x:Name="ScoreText" Text="0" Foreground="#00b894" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>

                <TextBlock Text="Кристаллы: " Foreground="White" FontSize="16"/>
                <TextBlock x:Name="CrystalsText" Text="0/0" Foreground="#fdcb6e" 
                           FontSize="16" FontWeight="Bold"/>

                <TextBlock Text="   | Управление: WASD - ходьба, ПРОБЕЛ - атака" 
                           Foreground="LightGray" FontSize="14" Margin="40,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Игровое поле -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto" Padding="10">
            <ItemsControl x:Name="GameGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid x:Name="MapGrid" Rows="{Binding MapHeight}" 
                                     Columns="{Binding MapWidth}" 
                                     Background="#0f1c30"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="50" Height="50" 
                                BorderBrush="#2a3b5c" BorderThickness="1"
                                Background="{Binding BackgroundColor}">
                            <TextBlock Text="{Binding Symbol}" 
                                       FontSize="28" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Color}"
                                       FontWeight="Bold"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="#16213e" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content=" Пауза" Width="120" Height="40" Margin="5"
                        Click="PauseBtn_Click" Background="#0984e3" 
                        Foreground="White" FontWeight="Bold"/>
                <Button Content="Сохранить" Width="120" Height="40" Margin="5"
                        Click="SaveBtn_Click" Background="#00b894" 
                        Foreground="White" FontWeight="Bold"/>
                <Button Content=" В меню" Width="120" Height="40" Margin="5"
                        Click="ExitBtn_Click" Background="#e17055" 
                        Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>